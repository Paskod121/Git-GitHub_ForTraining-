{
    "categories": [
      {
        "id": "setup",
        "name": "Configuration et démarrage",
        "description": "Commandes pour configurer Git et démarrer de nouveaux projets",
        "commands": [
          {
            "id": "git-init",
            "name": "git init",
            "description": "Initialise un dépôt Git vide",
            "syntax": "git init [directory]",
            "options": [
              {
                "flag": "--bare",
                "description": "Crée un dépôt sans répertoire de travail"
              },
              {
                "flag": "--template=<template_directory>",
                "description": "Spécifie le répertoire des templates"
              }
            ],
            "examples": [
              {
                "command": "git init",
                "description": "Initialise un dépôt Git dans le répertoire courant"
              },
              {
                "command": "git init mon-projet",
                "description": "Initialise un dépôt Git dans le répertoire 'mon-projet'"
              }
            ],
            "related": ["git-clone", "git-config"],
            "difficulty": "beginner"
          },
          {
            "id": "git-clone",
            "name": "git clone",
            "description": "Copie un dépôt existant vers un nouveau répertoire",
            "syntax": "git clone [url] [directory]",
            "options": [
              {
                "flag": "--branch, -b <name>",
                "description": "Clone la branche spécifiée au lieu de la branche par défaut"
              },
              {
                "flag": "--depth <depth>",
                "description": "Crée un clone superficiel avec un historique tronqué"
              }
            ],
            "examples": [
              {
                "command": "git clone https://github.com/user/repo.git",
                "description": "Clone le dépôt dans un répertoire nommé 'repo'"
              },
              {
                "command": "git clone https://github.com/user/repo.git mon-dossier",
                "description": "Clone le dépôt dans un répertoire nommé 'mon-dossier'"
              }
            ],
            "related": ["git-init", "git-remote"],
            "difficulty": "beginner"
          }
        ]
      }
    ],
    "workflows": [
      {
        "id": "basic-workflow",
        "name": "Workflow quotidien",
        "description": "Séquence de commandes typique pour un travail quotidien",
        "steps": [
          {
            "id": "step-1",
            "command": "git pull",
            "description": "Récupérer les dernières modifications du dépôt distant"
          },
          {
            "id": "step-2",
            "command": "git checkout -b feature-branch",
            "description": "Créer et basculer sur une nouvelle branche"
          },
          {
            "id": "step-3",
            "command": "git add .",
            "description": "Ajouter les modifications à l'index"
          },
          {
            "id": "step-4",
            "command": "git commit -m \"Description des modifications\"",
            "description": "Créer un commit avec les modifications indexées"
          },
          {
            "id": "step-5",
            "command": "git push origin feature-branch",
            "description": "Pousser les modifications vers le dépôt distant"
          }
        ],
        "difficulty": "beginner"
      }
    ]
  }